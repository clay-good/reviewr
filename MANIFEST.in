# Include important documentation files
include README.md
include LICENSE
recursive-include docs *.md

# Include configuration files
include pyproject.toml
include pytest.ini

# Include package data
recursive-include reviewr *.py
recursive-include reviewr *.yml
recursive-include reviewr *.yaml
recursive-include reviewr *.toml

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
exclude .gitignore
exclude poetry.lock
prune venv
prune reviewr/venv
prune vscode-extension
prune intellij-plugin
prune tests
exclude test_*.py
exclude demo_*.py
exclude run_all_tests.py

